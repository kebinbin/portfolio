---
const portrait = {
  img: "/assets/portrait.jpg",
  img_alt: "Portrait picture of me in office with indoor plants in background.",
};
---

<section>
  <header>
    <a id="about"><h2>Get to know me</h2></a>
  </header>
  <div class="about">
    <img
      class="portrait"
      src={portrait.img}
      alt={portrait.img_alt || ""}
      loading="lazy"
      decoding="async"
    />
    <div class="bio">
      <h3>About me</h3>
      <p></p><p></p>
    </div>
    <div class="experience">
      <h3>Experience</h3>
    </div>
    <div class="skills">
      <h3>Things I can help you with</h3>
    </div>
    <div class="education">
      <h3>Education</h3>
    </div>
  </div>
</section>

<style>
  .about {
    display: grid;
    grid-template-columns: 1fr 1fr 2fr;
    grid-template-rows: auto auto;
    grid-template-areas:
      "portrait-img about experience"
      "skills education experience";
  }

  .portrait {
    grid-area: portrait-img;
  }

  .about {
    grid-area: about;
  }

  .experience {
    grid-area: experience;
  }

  .skills {
    grid-area: skills;
  }

  .education {
    grid-area: education;
  }
</style>
