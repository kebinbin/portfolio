---
import Icon from '../components/Icon.astro'
import { getLangFromUrl } from '../i18n/utils'
import { getI18N } from '../i18n'
const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
const lang = getLangFromUrl(Astro.url)
---

<header class="container flex h-screen flex-col gap-36 py-28">
	<div class="flex flex-col gap-14">
		<div class="text-xl font-light uppercase tracking-widest">
			<span>{i18n.hero.name.first}</span>
			<span>{i18n.hero.name.middle}</span>
			<span class="font-bold">{i18n.hero.name.last}</span>
		</div>
		<h1
			class="items-center text-start text-8xl font-medium leading-20 text-stone-800 [word-spacing:-1rem] md:text-10xl md:leading-32 dark:text-stone-400"
		>
			<span class="inline-block tracking-tightest">{i18n.hero.h1.start}</span>
			<span class="block"></span>
			<span class="inline-block tracking-tight">{i18n.hero.h1.middle}</span>
			<span class="inline-block tracking-tightest">{i18n.hero.h1.end}</span>
		</h1>
		<p class="max-w-prose text-lg leading-7 text-stone-600 dark:text-stone-400">
			{i18n.hero.p}
		</p>
		<div class="flex flex-row flex-wrap gap-3 font-medium">
			<a
				href=`/${lang}/#contact`
				class="flex min-w-56 flex-grow items-center justify-center border border-solid border-stone-800 bg-stone-800 px-4 py-3 text-center text-base uppercase tracking-widest text-stone-400 md:flex-grow-0 dark:border-stone-800 dark:bg-stone-400 dark:text-stone-800"
				>{i18n.hero.cta.contact}</a
			>
			<a
				href=`/${lang}/#projects`
				class="flex min-w-56 flex-grow items-center justify-center border border-solid border-stone-800 px-4 py-3 text-center text-base uppercase tracking-widest text-stone-800 md:flex-grow-0 dark:border-stone-400 dark:text-stone-400"
				>{i18n.hero.cta.work}</a
			>
		</div>
	</div>
	<aside class="flex flex-row justify-between gap-2 py-2 text-start font-normal">
		<p
			class="ml-1 flex items-center gap-2 text-base font-medium text-stone-500 before:size-4 before:rounded-full before:bg-lime-500 dark:text-stone-500"
		>
			{i18n.hero.aside.availableFor}
		</p>
		<a
			href={`mailto:${i18n.metadata.email}`}
			class="-mt-64 leading-none text-stone-500 [writing-mode:vertical-lr]">{i18n.metadata.email}</a
		>
	</aside>
</header>

