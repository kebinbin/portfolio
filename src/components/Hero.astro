---
import Icon from "../components/Icon.astro";
import Service from "../components/Service.astro";
import { getI18N } from "../i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<header class="hero wrapper">
  <h1 class="title">
    {i18n.hero.h1.start}
    <span class="break"></span>
    {i18n.hero.h1.middle}
    <span class="break"></span>
    {i18n.hero.h1.end}
  </h1>
  <aside>
    <p>{i18n.hero.aside.availableFor}</p>
    <div class="bottom">
      <div class="services">
        {
          i18n.hero.aside.services.map((service) => (
            <Service>
              <Icon icon={service.icon} size="1em" />
              <span>{service.label}</span>
            </Service>
          ))
        }
      </div>

      <div class="projects-link">
        <span>{i18n.hero.recentProjects}</span>
        <a href="#projects">
          <strong>{i18n.hero.recentProjectsLink}</strong>
        </a>
        <div class="line"></div>
      </div>
    </div>
  </aside>
</header>

<style>
  .hero {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    text-align: center;
    font-size: var(--font-size-9);
  }

  .title {
    align-items: center;
    padding: var(--space-7) 0;
    text-align: center;
    font-size: var(--font-size-8);
    font-weight: var(--font-weight-4);
    text-transform: uppercase;
    /* line-height: 5.5rem; */
    color: var(--font-color-5);
    /* font-family: var(--font-brand); */
    /* max-width: 19ch; */
    /* margin-inline: auto; check this */
  }

  .break {
    display: block;
  }

  aside {
    display: flex;
    flex-direction: column;
    padding: var(--space-2) 0;
    gap: var(--space-4);
    text-align: start;
    color: var(--font-color-5);
    font-weight: var(--font-weight-2);
  }

  aside > p::before {
    /* display: inline-flex; */
    /* display: inline-flex; */

    content: "";
    height: var(--space-4);
    width: var(--space-4);
    padding: 0;
    margin-right: var(--space-1);
    border: 0;
    border-radius: 999rem;
    background-color: var(--color-semantic-success-2);
  }

  aside > p {
    /* flex-grow: 1; */
    display: flex;
    align-items: center;
  }

  .bottom {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .services {
    display: flex;
    flex-direction: row;
    gap: var(--space-2);
    align-items: flex-start;
    justify-content: flex-start;
    flex-wrap: wrap;
  }
  .services span {
    display: block;
    height: var(--space-5);

    /* Crazy hack to fix font vertical issue */
    vertical-align: text-bottom;
    line-height: 1.7;
  }

  .projects-link {
    /* align-content: flex-end; */
    /* text-align: end; */
    color: var(--font-color-3);
    font-size: var(--font-size-3);
    letter-spacing: var(--font-letter-spacing-1);
  }

  .line::before {
    content: "";
    border-right: var(--border-width-1) solid var(--border-color-2);
    display: inline-block;
    margin-top: var(--space-4);
    width: 50%;
    height: var(--space-5);
  }

  .projects-link a {
    color: var(--link-color);
    font-family: var(--font-family-body);
  }

  /* 
  @media (min-width: 30em) {
    .services {
      flex-direction: row;
    }
  } */

  @media (min-width: 56em) {
    aside {
      gap: var(--space-1);
    }
    .bottom {
      flex-direction: row;
      justify-content: space-between;
    }
    .title {
      align-items: center;
      padding: var(--space-9) 0;
      text-align: center;
      font-size: var(--font-size-9);
      font-weight: var(--font-weight-4);
      text-transform: uppercase;
      line-height: var(--font-line-height-1);

      /* max-width: 19ch; */
      /* margin-inline: auto; check this */
    }
  }
</style>
