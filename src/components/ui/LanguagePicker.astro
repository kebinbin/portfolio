---
import { languages } from '../../i18n/ui'
const { currentLocale } = Astro
const [lang] = Object.keys(languages).filter((lang) => lang != currentLocale)
---

<a
	class="text-sm font-medium tracking-wide text-stone-600 uppercase hover:text-stone-900 focus:text-stone-950 lg:px-1 dark:text-stone-500 dark:hover:text-stone-300 dark:focus:text-stone-200"
	href={`/${lang}/`}>{lang}</a
>
