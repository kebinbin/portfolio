---
import Layout from '../layouts/Layout.astro'
import { getI18N } from '../i18n'
const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })[404]
---

<Layout>
	<main
		class="container flex h-[calc(100vh-16.25rem)] flex-col items-center justify-center align-middle"
	>
		<h1
			class="text-start text-[clamp(4.25rem,9vw,10rem)] leading-[.85em] font-semibold lg:leading-[.8em]"
		>
			404
		</h1>
		<p class="p-6">{i18n.p}</p>
	</main>
</Layout>
